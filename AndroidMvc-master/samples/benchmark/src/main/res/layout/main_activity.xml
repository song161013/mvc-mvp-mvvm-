<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Inject by Dagger, Fields 10"
                android:id="@+id/button_dagger_inject10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/text_dagger_inject10" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="300dp"
                android:layout_gravity="center"
                android:text="Inject by Dagger, Fields 10x10"
                android:id="@+id/button_dagger_inject10x10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/text_dagger_inject10x10" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Inject By Poke Registry, Fields 10"
                android:id="@+id/button_poke_registry_inject10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/text_poke_registry_inject10" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Inject By Poke Registry, Fields 10x10"
                android:id="@+id/button_poke_registry_inject10x10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/text_poke_registry_inject10x10" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Inject By Poke Pattern, Fields 10"
                android:id="@+id/button_poke_pattern_inject10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/text_poke_pattern_inject10" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Inject By Poke Pattern, Fields 10x10"
                android:id="@+id/button_poke_pattern_inject10x10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/text_poke_pattern_inject10x10" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

