<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shipdream.lib.android.mvc.view.test">

    <application
        android:name="com.shipdream.lib.android.mvc.view.MvcApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name">
        <activity android:name="com.shipdream.lib.android.mvc.view.lifecycle.MvcTestActivity"
                  android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        </activity>

        <activity android:name="com.shipdream.lib.android.mvc.view.nav.MvcTestActivityNavigation"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity android:name="com.shipdream.lib.android.mvc.view.viewpager.ViewPagerTestActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.shipdream.lib.android.mvc.view.viewpager.ViewPagerTestActivityTop"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity android:name="com.shipdream.lib.android.mvc.view.injection.InjectionTestActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.shipdream.lib.android.mvc.view.event2v.EventBusV2VActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity android:name="com.shipdream.lib.android.mvc.view.injection.InjectionTestActivityStateManagedObjects"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity android:name="com.shipdream.lib.android.mvc.view.injection.InjectionTestActivityTestRootFragment"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <service android:name="com.shipdream.lib.android.mvc.view.event2v.EventBusV2VService"/>
    </application>

</manifest>
